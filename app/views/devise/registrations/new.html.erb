<% content_for :body_class, 'layout-top-nav' %>


<section class="content">
  <div class="row">
    <!-- left column -->
    <!-- <div class="col-md-3"></div> -->
    <div class="col-md-4 col-md-offset-4">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Регистрация</h3>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="box-body">
            <div class="form-group <%= error_class resource, :name %>">
              <%= f.label :name, style: "color: black;" %>
              <% if !error_class(resource, :name) %><br /><% end %>

              <%= f.text_field :name, class: "form-control", autofocus: true %>

              <%= error_on resource, :name %>
            </div>


            <div class="form-group <%= error_class resource, :email %>">
              <%= f.label :email, style: "color: black;" %>
              <% if !error_class(resource, :email) %><br /><% end %>

              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>

              <%= error_on resource, :email %>
            </div>

            <div class="form-group <%= error_class resource, :password %>">
              <%= f.label :password, style: "color: black;" %>
              <% if @minimum_password_length %>
                <em>(минимум <%= @minimum_password_length %> символов)</em>
              <% end %>
              <% if !error_class(resource, :password) %><br /><% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>

              <%= error_on resource, :password %>
            </div>

            <div class="form-group <%= error_class resource, :password_confirmation %>">
              <%= f.label :password_confirmation, style: "color: black;" %>

              <% if !error_class(resource, :password_confirmation) %><br /><% end %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>

              <%= error_on resource, :password_confirmation %>
            </div>
          </div>

          <div class="box-footer">
            <!--
            <button type="submit" class="btn btn-default">Cancel</button>
            <button type="submit" class="btn btn-info pull-right">Sign in</button>
            -->
            <%= f.submit "Зарегистрироваться" %>
          </div>

        <% end %>

      </div>
    </div>
    <!--/.col (right) -->

    <!-- <div class="col-md-3"></div> -->
  </div>
  <!-- /.row -->
</section>
