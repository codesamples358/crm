<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>NewCRM | Dashboard</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <%= yield :styles %>
</head>
<body class="hold-transition skin-blue <%= content_for?(:body_class) && yield(:body_class) || 'sidebar-mini' %>">
<div class="wrapper">

  <% unless current_page?('/admin_lte/top-nav') %>
    <%= render 'layouts/admin_lte/header' %>
    <!-- Left side column. contains the logo and sidebar -->
    <%= render 'layouts/admin_lte/sidebar' %>
  <% else %> 
    <%= render 'layouts/admin_lte/top_nav_header' %>
  <% end %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%= yield %>
  </div>
  <!-- /.content-wrapper -->

  <% unless current_page?('/admin_lte/top-nav') %>
    <%= render 'layouts/admin_lte/footer' %>
    <%= render 'layouts/admin_lte/control_sidebar' %>
  <% else %>
    <%= render 'layouts/admin_lte/top_nav_footer' %>
  <% end %>  
</div>
<!-- ./wrapper -->

<%= yield :scripts %>

</body>
</html>
